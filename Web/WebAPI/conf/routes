# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.initial()
	
GET 	/initial					controllers.Application.initializeBoard()

GET		/b:id						controllers.Application.move(id : String)

GET		/die						controllers.Application.throwDie()

GET 	/register					controllers.Application.register(username : String, email : String, password : String)

GET		/login						controllers.Application.login(username : String, password : String)

GET		/gotoLogin					controllers.Application.gotoLogin()

GET		/gotoNewUser				controllers.Application.gotoNewUser()

GET		/gotoStatistics				controllers.Application.gotoStatistics()

# Map static resources from the /public folder to the /assets URL path
GET     /public/*file          		controllers.Assets.at(path="/public", file)