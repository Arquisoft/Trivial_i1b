# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.initial()

GET		/b:id						controllers.Application.showQuestion(id : String)

GET		/die						controllers.Application.throwDie()

GET 	/register:url				controllers.Application.register(url : String)

GET		/login:url					controllers.Application.login(url : String)

GET		/gotoNewUser				controllers.Application.gotoNewUser()

GET		/gotoLogin					controllers.Application.gotoLogin()

GET		/gotoStatistics				controllers.Application.gotoStatistics()

GET		/answer:number				controllers.Application.checkAnswer(number : Integer)

GET 	/gotoInitial				controllers.Application.initial()


# Map static resources from the /public folder to the /assets URL path
GET     /public/*file          		controllers.Assets.at(path="/public", file)